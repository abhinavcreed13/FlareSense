<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="play.digigods.flaresense.P1_Mod1_Intro.P1_IntroPage3">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/guardianeye"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GuardianEye"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="45sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/text_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Let People you trust keep an eye"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="30sp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/image_trans"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/strip3"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/image_bookmark"
        android:layout_width="100dp"
        android:layout_height="63dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/ribbon_maroon"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:id="@+id/image_bookmark_left"
        android:layout_width="100dp"
        android:layout_height="63dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/ribbon_maroon_reflect"
        android:layout_gravity="bottom|left"/>

    <ImageView
        android:id="@+id/image_arrow3"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/arrow_right"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:id="@+id/image_arrow_hover3"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/arrow_right_maroon"
        android:layout_gravity="bottom|right"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_arrow_left3"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/arrow_left"
        android:layout_gravity="bottom|left"/>

    <ImageView
        android:id="@+id/image_arrow_left_hover3"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/arrow_left_maroon"
        android:layout_gravity="bottom|left"
        android:visibility="gone"/>

</FrameLayout>
