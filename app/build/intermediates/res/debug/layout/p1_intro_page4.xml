<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="play.digigods.flaresense.P1_Mod1_Intro.P1_IntroPage4">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/flaresense_intro_tt"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Features"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="45sp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/image_trans"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/strip4"
        android:layout_gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/image_bookmark_left"
        android:layout_width="100dp"
        android:layout_height="63dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ribbon_reflect"
        android:layout_gravity="bottom|left"/>

    <ImageView
        android:id="@+id/image_arrow_left4"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_left"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="52dp"
        android:layout_gravity="bottom|left"/>

    <ImageView
        android:id="@+id/image_arrow_left_hover4"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_left_green"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="52dp"
        android:layout_gravity="bottom|left"
        android:visibility="gone"/>

    <Button
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter FlareSense"
        android:background="@drawable/button_design_menu"
        android:id="@+id/enterflare"
        android:layout_gravity="bottom"
        android:textColor="@color/White"/>


</FrameLayout>
